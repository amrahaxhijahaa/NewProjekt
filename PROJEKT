                <script>
                  let i=0;
                  let imgArray = ['foto2/pht1.jpg','foto2/pht10.jpg','foto2/pht3.jpg','foto2/pht4.jpg','foto2/pht5.jpg','foto2/pht6.jpg','foto2/pht7.jpg','foto2/pht8.jpg','foto2/pht2.jpg'];
    
                  function changeImg(){
                    document.getElementById('slideshow').src = imgArray[i];
                    if(i<imgArray.length -1){
                      i++
                    }
                    else{
                      i=0;
    
                    }
                    setTimeout('changeImg()', 2000);
                  }
                  document.addEventListener(onload, changeImg());
                </script>
            
